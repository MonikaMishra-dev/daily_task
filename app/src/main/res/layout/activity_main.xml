<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.example.dynamicviewproject.DynamicViewModel" />
    </data>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#87CEEB"
    >
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:singleSelection="true"
        android:layout_marginTop="20dp">
    <Button
        android:id="@+id/btnParagraph"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="@string/display_paragraph"
        style="?attr/materialButtonOutlinedStyle"
        android:textColor="@color/purple_700"
        android:textStyle="bold"
        android:textSize="14sp"
        android:onClick="@{()->viewModel.createParagraph()}"
        />
        <Button
            android:id="@+id/btnBulleted"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="@string/display_bulleted"
            style="?attr/materialButtonOutlinedStyle"
            android:textColor="@color/purple_700"
            android:textStyle="bold"
            android:textSize="14sp"
            android:onClick="@{()->viewModel.createBulleted()}"
            />
        <Button
            android:id="@+id/btnSteps"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="@string/display_steps"
            style="?attr/materialButtonOutlinedStyle"
            android:textColor="@color/purple_700"
            android:textStyle="bold"
            android:textSize="14sp"
            android:onClick="@{()->viewModel.createSteps()}"
            />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toggleButton"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            android:layout_margin="16dp"
            android:foreground="?attr/selectableItemBackground">
            <LinearLayout
                android:id="@+id/linear_Layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="16dp">
            </LinearLayout>
        </androidx.cardview.widget.CardView>
<!--        <EditText-->
<!--            android:id="@+id/editText"-->
<!--            android:inputType="textMultiLine"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginEnd="16dp"-->
<!--            android:layout_marginStart="16dp"-->
<!--            android:layout_marginBottom="16dp"-->
<!--            android:layout_marginTop="30dp"-->
<!--            android:hint="@string/enter_text"-->
<!--            android:textColor="@color/black"-->
<!--            android:textSize="18sp"-->
<!--            android:text="@={viewModel.mutableLiveData}"/>-->
    </LinearLayout>

</RelativeLayout>
</layout>